# Environment Variables for StockPlay
# Copy this file to .env and fill in your values

# MongoDB Connection String
MONGO_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority

# Finnhub API Key (https://finnhub.io/)
FINNHUB_API_KEY=your_finnhub_api_key_here

# Polygon API Key (https://polygon.io/)
POLYGON_API_KEY=your_polygon_api_key_here

# Frontend URL (for CORS - use your deployed frontend URL in production)
FRONTEND_URL=http://localhost:3000

# Port (optional, defaults to 3001)
PORT=3001
